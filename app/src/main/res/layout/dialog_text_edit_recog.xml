<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editTextInfor"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_margin="@dimen/dialog_margin_mid"
        android:hint="编辑"
        android:maxLines="5"
        android:scrollbars="vertical"
        android:gravity="top"
        android:paddingTop="@dimen/margin_s"
        android:paddingBottom="@dimen/margin_s"
        android:paddingLeft="@dimen/dialog_margin_mini"
        android:paddingRight="@dimen/dialog_margin_mini"
        android:background="@drawable/edit_edge"
        android:textColor="@android:color/black"
        android:textSize="@dimen/Third_Title_Font_Size">
        <requestFocus />
    </EditText>

</LinearLayout>